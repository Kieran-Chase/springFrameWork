<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="girl" class="com.xzit.injection.Girl" p:name="张三" p:height="165" p:weight="120"></bean>
    <bean id="girl1" class="com.xzit.injection.Girl" p:name="张三1" p:height="170" p:weight="110"></bean>
    <bean id="boy" class="com.xzit.injection.Boy" p:name="李四" p:girl-ref="girl"></bean>
    <!--下面的name相当于起别名-->
    <bean id="boy1" name="boy1,boy2" class="com.xzit.injection.Boy" p:name="李四" p:girl-ref="girl1"></bean>
</beans>